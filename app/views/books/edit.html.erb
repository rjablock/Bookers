<h2>Editing book</h2>
<%= form_with model: @book do |f| %>

<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit 'Update Book' %>
</div>

<% end %>

  <a><%= link_to "Show", book_path(@book.id) %></a>

  <text>|</text>

  <a><%= link_to "Back", '/books' %></a>