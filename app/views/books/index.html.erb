<body>

<h1>Books</h1>

<table>
  <tr>
    <th class="heading"><b/>Title</b></th>
    <th class="heading"></b>Body</b></th>
  </tr>

<% @books.each do |book| %>

  <tr>
    <td><span><%= book.title %></span></td>

    <td><span><%= book.body %></span></td>

    <td><%= link_to 'Show', book_path(book.id),class:"show" %></td>

    <td><%= link_to 'Edit', edit_book_path(book.id) %></td>

    <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
<% end %>

</table>

<h2>New book</h2>

<% if @book.errors.any? %>
<div class="error">
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book do |f| %>

<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit 'Create Book' %>
</div>

<% end %>

</body>